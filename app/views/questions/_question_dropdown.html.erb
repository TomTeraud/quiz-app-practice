<% if owner_of?(question.quiz) %>
  <%= render "shared/dropdown_menu" do %>
    <% if controller_name == "quizzes" && action_name == "show" %>
      <%= link_to "View", quiz_question_path(question.quiz, question), class: "dropdown-item" %>
    <% elsif controller_name == "questions" && action_name == "show" %>
      <%= link_to "Edit", edit_quiz_question_path(question.quiz, question), class: "dropdown-item" %>
    <% end %>
    
    <%= button_to "Delete", quiz_question_path(question.quiz, question),
                  method: :delete,
                  data: { turbo_confirm: "Are you sure?" },
                  class: "dropdown-item dropdown-item-danger" %>
  <% end %>
<% end %>