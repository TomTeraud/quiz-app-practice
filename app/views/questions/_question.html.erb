<div class="quiz-card">
  <div class="flex justify-between items-start mb-4">
    <h3 class="card-title flex-1">
      <%= link_to question.question_text, quiz_question_path(question.quiz, question), class: "card-title-link" %>
    </h3>
    <%= render "questions/question_dropdown", question: question %>
  </div>
  
  <div class="flex justify-between items-end">
    <span class="card-meta">Type: <%= question.question_type.humanize %></span>
    <span class="difficulty-badge difficulty-<%= question.difficulty_name.downcase %>">
      <%= question.difficulty_name %>
    </span>
  </div>
</div>