<div id="question-form" class="hidden mt-6">
  <%= form_with model: [quiz, quiz.questions.build], local: true, class: "space-y-4" do |form| %>
    <div class="form-field">
      <%= form.text_area :question_text, placeholder: "Enter your question here", class: "form-textarea", rows: 3 %>
    </div>
    
    <div class="form-field">
      <%= form.select :question_type,
                      options_for_select([
                        ["Multiple Choice", "multiple_choice"],
                        ["True/False", "true_false"],
                        ["Short Answer", "short_answer"],
                      ]),
                      { prompt: "Select question type" },
                      { class: "form-input" } %>
    </div>
    
    <div class="difficulty-field">
      <%= form.label :difficulty, "Difficulty Level", class: "form-label" %>
      <%= form.range_field :difficulty, in: 1..4, step: 1, value: 2, class: "difficulty-slider" %>
      <div class="difficulty-labels">
        <span>Easy</span>
        <span>Medium</span>
        <span>Hard</span>
        <span>Impossible</span>
      </div>
    </div>

    <div class="flex space-x-2">
      <%= form.submit "Add Question", class: "btn-secondary" %>
      <button type="button" onclick="hideQuestionForm()" class="btn-cancel">Cancel</button>
    </div>
  <% end %>
</div>