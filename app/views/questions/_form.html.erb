<%= form_with model: [@quiz, question], local: true do |form| %>
  <div class="form-field">
    <%= form.text_area :question_text, class: "form-textarea", rows: 3 %>
  </div>
  
  <div class="form-field">
    <%= form.select :question_type,
                    options_for_select([
                      ["Multiple Choice", "multiple_choice"],
                      ["True/False", "true_false"],
                      ["Short Answer", "short_answer"],
                    ], question.question_type),
                    { prompt: "Select question type" },
                    { class: "form-input" } %>
  </div>
  
<div class="difficulty-field">
  <%= form.label :difficulty, "Difficulty Level", class: "form-label" %>
  <%= form.range_field :difficulty, in: 1..4, step: 1, value: question.difficulty || 2, class: "difficulty-slider" %>
  <div class="difficulty-labels">
    <span>Easy</span>
    <span>Medium</span>
    <span>Hard</span>
    <span>Impossible</span>
  </div>
</div>

  <%= form.submit "Update Question", class: "btn-secondary" %>
<% end %>