<div class="page-content">
  <div class="quiz-card max-w-md mx-auto">
    <h2 class="page-header text-center">Log In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
      <div class="form-field">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <div class="form-field">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="form-actions">
        <%= f.submit "Log in", class: "btn-primary w-full" %>
      </div>
    <% end %>

    <div class="text-center mt-4 text-sm">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-600 hover:text-blue-800" %> |
      <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-blue-600 hover:text-blue-800" %>
    </div>
  </div>
</div>
