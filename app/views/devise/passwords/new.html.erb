<div class="page-content">
 <div class="quiz-card max-w-md mx-auto">
   <h2 class="page-header text-center">Forgot your password?</h2>

   <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
     <%= render "devise/shared/error_messages", resource: resource %>

     <div class="form-field">
       <%= f.label :email, class: "form-label" %>
       <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
     </div>

     <div class="form-actions">
       <%= f.submit "Send reset instructions", class: "btn-primary w-full" %>
     </div>
   <% end %>

   <div class="text-center mt-4 text-sm">
     <%= link_to "Log in", new_session_path(resource_name), class: "text-blue-600 hover:text-blue-800" %> |
     <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-600 hover:text-blue-800" %>
   </div>
 </div>
</div>