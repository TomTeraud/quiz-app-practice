<div class="page-content">
  <div class="quiz-card max-w-2xl mx-auto">
    <h1 class="page-header"><%= @quiz.title %></h1>
    <p class="text-gray-500 mt-2">Best score this session: <%= session.dig(:best_scores, @quiz.id.to_s) || 0 %>%</p>    
    <p class="card-description mb-6"><%= @quiz.description %></p>
    
    <div class="grid grid-cols-2 gap-4 mb-6">
      <div class="text-center">
        <div class="text-2xl font-bold"><%= @quiz.questions.count %></div>
        <div class="text-sm text-gray-500">Questions</div>
      </div>
      <div class="text-center">
        <div class="text-2xl font-bold"><%= @quiz.category.name %></div>
        <div class="text-sm text-gray-500">Category</div>
      </div>
    </div>
    
    <div class="text-center">
      <% if @quiz.questions.count > 0%>
      <h1 class="text-3xl font-bold mb-4">Ready to start?</h1>
      <%= link_to "Begin Quiz", take_quiz_path(@quiz, question: 1), class: "btn-primary text-lg px-8 py-3" %>
      <% else %>
      <h1 class="text-3xl font-bold mb-4">Add questions first</h1>
      <% end %>
      </div>
  </div>
</div>