<div class="quiz-card">
  <div class="flex justify-between items-start">
    <h3 class="card-title">
      <%= @quiz.title %>
    </h3>
    
    <!-- Three dots dropdown -->
    <div class="dropdown">
      <button class="dropdown-trigger" onclick="toggleDropdown(event)">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path>
        </svg>
      </button>
      
      <div class="dropdown-menu hidden">
        <%= link_to "Edit", edit_quiz_path(@quiz), class: "dropdown-item" %>
        <%= button_to "Delete", quiz_path(@quiz),
                      method: :delete,
                      data: { turbo_confirm: "Are you sure?" },
                      class: "dropdown-item-danger" %>
      </div>
    </div>
  </div>
  
  <p class="card-description">
    <%= @quiz.description %>
  </p>
  
  <div class="flex justify-between items-center">
    <div class="card-meta">
      Created <%= time_ago_in_words(@quiz.created_at) %> ago
    </div>
    
    <div class="flex space-x-2">
      <span class="category-badge">
        <%= @quiz.category.name %>
      </span>
      <span class="difficulty-badge difficulty-<%= @quiz.difficulty_name.downcase %>">
        <%= @quiz.difficulty_name %>
      </span>
    </div>
  </div>
</div>

<script>
function toggleDropdown(event) {
  event.stopPropagation();
  const dropdown = event.target.closest('.dropdown');
  const menu = dropdown.querySelector('.dropdown-menu');
  menu.classList.toggle('hidden');
  
  // Close dropdown when clicking outside
  document.addEventListener('click', function closeDropdown() {
    menu.classList.add('hidden');
    document.removeEventListener('click', closeDropdown);
  });
}
</script>