<% if owner_of?(quiz) %>
  <%= render "shared/dropdown_menu" do %>
    <% if controller_name == "quizzes" && action_name == "index" %>
      <%= link_to "View", quiz_path(quiz), class: "dropdown-item" %>
    <% elsif controller_name == "quizzes" && action_name == "show" %>
      <%= link_to "Edit", edit_quiz_path(quiz), class: "dropdown-item" %>
    <% end %>
    
    <%= button_to "Delete", quiz_path(quiz),
                  method: :delete,
                  data: { turbo_confirm: "Are you sure?" },
                  class: "dropdown-item dropdown-item-danger" %>
  <% end %>
<% end %>