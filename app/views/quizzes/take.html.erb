<div class="page-content">
  <div class="quiz-card max-w-2xl mx-auto">
    <!-- Progress -->
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-lg font-medium"><%= @quiz.title %></h2>
      <span class="text-sm text-gray-500">Question <%= @current_question_number %> of <%= @total_questions %></span>
    </div>
    
    <!-- Progress Bar -->
    <div class="w-full bg-gray-200 rounded-full h-2 mb-8">
      <div class="bg-blue-500 h-2 rounded-full" style="width: <%= (@current_question_number.to_f / @total_questions * 100).round(1) %>%"></div>
    </div>
    
    <!-- Question -->
    <div class="mb-8">
      <h3 class="text-xl font-semibold mb-6"><%= @question.question_text %></h3>
      
      <%= form_with url: answer_quiz_path(@quiz), method: :post, local: true, class: "space-y-4" do |form| %>
        <%= hidden_field_tag :question_id, @question.id %>
        <%= hidden_field_tag :current_question, @current_question_number %>
        
        <!-- Answer Options -->
        <div class="space-y-3">




          <% @question.answers.each do |answer| %>
                <label class="flex items-start space-x-3 p-3 border border-gray-200 rounded-lg hover:bg-gray-50 cursor-pointer">
                <%= radio_button_tag :answer_ids, answer.id, 
                  session.dig("quiz_attempt", "answers", @question.id.to_s) == answer.id.to_s
                    class: "mt-1" %>
                  <span class="flex-1"><%= answer.answer_text %></span>

              </label>
          <% end %>
        </div>
        
        <!-- Navigation -->
        <div class="flex justify-between items-center pt-6">
          <% if @current_question_number > 1 %>
          <%= link_to "Previous", take_quiz_path(@quiz, question: @current_question_number - 1), class: "btn-cancel" %>
          <% else %>
            <div></div>
          <% end %>
          
          <% if @current_question_number < @total_questions %>
            <%= form.submit "Next Question", class: "btn-secondary" %>
          <% else %>
            <%= form.submit "Finish Quiz", class: "btn-primary" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>