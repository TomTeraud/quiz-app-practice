# app/views/shared/_navbar.html.erb
<nav class="bg-transparent border-b border-gray-200">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <div class="text-xl font-bold text-gray-900">
        <%= link_to "QUIZER", root_path, class: "text-gray-900 hover:text-gray-600" %>
      </div>
      
      <!-- Right side navigation -->
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <% unless current_page?(new_quiz_path) %>
            <%= link_to new_quiz_path, class: "btn-create", title: "Create Quiz" do %>
              <span class="text-3xl font-light leading-none">+</span>
            <% end %>
          <% end %>
          <%= link_to "Profile", edit_user_registration_path, class: "nav-link" %>
          <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link inline" %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>